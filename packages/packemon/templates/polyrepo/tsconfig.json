// https://www.npmjs.com/package/tsconfig-moon
{
  "extends": "tsconfig-moon/tsconfig.json",
  // Uncomment if using React/JSX
  // "extends": "tsconfig-moon/tsconfig.react.json",
  "include": ["src/**/*", "types/**/*"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dts",
    "emitDeclarationOnly": true,
    "outDir": "dts",
    "rootDir": "src"
  }
}
