{
  "private": true,
  "name": "packemon-monorepo",
  "scripts": {
    "build": "packemon build",
    "check": "yarn run type && yarn run test && yarn run lint",
    "clean": "packemon clean",
    "coverage": "yarn run test --coverage",
    "format": "prettier --write ./packages",
    "lint": "eslint --cache --fix ./packages",
    "pack": "NODE_ENV=production packemon pack --addEngines --declaration=standard",
    "test": "jest",
    "type": "tsc --build",
    "validate": "packemon validate",
    "watch": "packemon watch"
  },
  "workspaces": [
    "packages/*"
  ]
}
