{
  "name": "packemon",
  "version": "1.1.0",
  "description": "Build and prepare packages for NPM distribution using standardized configurations and practices. Gotta pack 'em all!",
  "keywords": [
    "build",
    "prepare",
    "pack",
    "package"
  ],
  "scripts": {
    "docs": "cd website && yarn run start",
    "prepare": "beemo create-config",
    "setup": "beemo babel src/ --out-dir build/",
    "build": "yarn run packemon build",
    "validate": "yarn run packemon validate",
    "check": "yarn run type && yarn run test && yarn run lint",
    "clean": "yarn run packemon clean",
    "coverage": "yarn run test --coverage",
    "format": "beemo prettier",
    "lint": "beemo eslint",
    "release": "npx np --yolo",
    "test": "beemo jest",
    "type": "beemo typescript --noEmit",
    "prerelease": "yarn run clean && yarn run setup && yarn run pack && yarn run check",
    "pack": "NODE_ENV=production yarn run packemon pack --addEngines --addExports --declaration=api --declarationConfig=tsconfig.build.json",
    "packemon": "node ./packemon.js"
  },
  "repository": "https://github.com/milesj/packemon.git",
  "author": "Miles Johnson",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./dts/index.d.ts",
  "bin": "./lib/bin.js",
  "files": [
    "babel.js",
    "dts/**/*.d.ts",
    "lib/**/*.{js,map}",
    "src/**/*.{ts,tsx,json}"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./babel": {
      "node": "./lib/babel.js",
      "types": "./dts/babel.d.ts"
    },
    "./bin": {
      "node": "./lib/bin.js",
      "types": "./dts/bin.d.ts"
    },
    ".": {
      "node": "./lib/index.js",
      "types": "./dts/index.d.ts"
    }
  },
  "engines": {
    "node": ">=12.17.0",
    "npm": ">=6.13.0"
  },
  "packemon": {
    "inputs": {
      "index": "src/index.ts",
      "babel": "src/babel.ts",
      "bin": "src/bin.ts"
    },
    "format": "lib",
    "platform": "node"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@beemo/dev": "^1.1.0",
    "@boost/test-utils": "^2.3.1",
    "@types/fs-extra": "^9.0.12",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^16.3.0",
    "@types/npm-packlist": "^1.1.2",
    "@types/react": "^16.9.56",
    "@types/rimraf": "^3.0.1",
    "@types/semver": "^7.3.7",
    "chokidar": "^3.5.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-decorators": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-flow": "^7.14.5",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@boost/cli": "^2.10.4",
    "@boost/common": "^2.7.2",
    "@boost/debug": "^2.2.5",
    "@boost/event": "^2.3.2",
    "@boost/pipeline": "^2.2.5",
    "@boost/terminal": "^2.2.1",
    "@microsoft/api-extractor": "^7.18.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "builtin-modules": "^3.2.0",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.7",
    "filesize": "^6.4.0",
    "fs-extra": "^10.0.0",
    "ink": "^3.0.8",
    "ink-progress-bar": "^3.0.0",
    "ink-spinner": "^4.0.2",
    "micromatch": "^4.0.4",
    "npm-packlist": "^2.2.2",
    "react": "^16.14.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.1",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-polyfill-node": "^0.6.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "semver": "^7.3.5",
    "spdx-license-list": "^6.4.0"
  },
  "optionalPeerDependencies": {
    "chokidar": "^3.5.1",
    "typescript": "^4.2.4"
  },
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/milesjohnson"
  }
}
