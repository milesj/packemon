{
  "private": true,
  "name": "packemon-root",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "docs": "cd website && yarn run start",
    "prepare": "beemo create-config",
    "setup": "beemo babel packages/packemon/src/ --out-dir build/",
    "build": "yarn run packemon build",
    "validate": "yarn run packemon validate",
    "check": "yarn run type && yarn run test && yarn run lint",
    "clean": "yarn run packemon clean",
    "coverage": "yarn run test --coverage",
    "format": "beemo prettier",
    "lint": "beemo eslint",
    "release": "npx np --yolo",
    "test": "beemo jest",
    "type": "beemo typescript --build",
    "prerelease": "yarn run clean && yarn run setup && yarn run pack && yarn run check",
    "pack": "NODE_ENV=production yarn run packemon pack --addEngines --addExports --declaration=standard",
    "packemon": "node ./packemon.js"
  },
  "workspaces": [
    "packages/*",
    "website"
  ],
  "engines": {
    "node": ">=12.17.0",
    "npm": ">=6.13.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@beemo/dev": "^1.2.0",
    "@boost/test-utils": "^2.3.2",
    "@types/fs-extra": "^9.0.12",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^16.3.1",
    "@types/npm-packlist": "^1.1.2",
    "@types/react": "^16.9.56",
    "@types/rimraf": "^3.0.1",
    "@types/semver": "^7.3.7",
    "chokidar": "^3.5.2",
    "typescript": "^4.3.5"
  },
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/milesjohnson"
  }
}
