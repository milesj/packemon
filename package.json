    "@types/micromatch": "^4.0.6",
    "@types/node": "^16.18.68",
    "@types/react": "^18.2.24",
    "@types/semver": "^7.5.6",
    "babel-preset-moon": "^2.0.11",
    "chokidar": "^3.5.3",
    "electron-to-chromium": "^1.4.610",
    "eslint": "^8.55.0",
    "eslint-config-moon": "^2.0.12",
