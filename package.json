{
  "name": "packemon",
  "version": "0.1.0",
  "description": "Build and prepare your package using standardized practices. Gotta pack 'em all!",
  "keywords": [
    "build",
    "prepare",
    "pack",
    "package"
  ],
  "scripts": {
    "prepare": "beemo create-config --silent",
    "setup": "beemo typescript",
    "build": "yarn run packemon && beemo typescript --emitDeclarationOnly",
    "ci": "yarn run type && yarn run test && yarn run lint",
    "coverage": "yarn run test --coverage",
    "format": "beemo prettier",
    "lint": "beemo eslint",
    "release": "npx np --yolo",
    "test": "beemo jest",
    "type": "beemo typescript --noEmit",
    "prerelease": "yarn run ci && yarn run build",
    "packemon": "node ./bin/packemon.js"
  },
  "repository": "https://github.com/milesj/packemon.git",
  "author": "Miles Johnson",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": "./bin/packemon.js",
  "sideEffects": false,
  "engines": {
    "node": ">=10.10.0"
  },
  "packemon": {
    "inputs": {
      "index": "src/index.ts",
      "babel": "src/babel.ts"
    },
    "platform": "node"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "decorators": true,
      "node": true,
      "react": true
    },
    "typescript": {
      "compilerOptions": {
        "resolveJsonModule": false
      }
    }
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.13.0",
    "@types/react": "^16.9.51"
  },
  "dependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-flow": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@boost/cli": "^2.2.0",
    "@boost/common": "^2.2.2",
    "@boost/event": "^2.2.0",
    "@boost/pipeline": "^2.1.3",
    "@boost/terminal": "^2.1.0",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "babel-plugin-transform-dev": "^2.0.1",
    "builtin-modules": "^3.1.0",
    "filesize": "^6.1.0",
    "ink": "^3.0.7",
    "ink-progress-bar": "^3.0.0",
    "ink-spinner": "^4.0.1",
    "react": "^16.13.1",
    "rollup": "^2.29.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "spdx-license-list": "^6.3.0"
  }
}
