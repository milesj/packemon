{
  "private": true,
  "name": "packemon-root",
  "scripts": {
    "docs": "yarn run moon run website:start",
    "moon": "$(yarn bin moon)",
    "clean": "rm -rf packages/*/{cjs,lib,mjs}",
    "packemon": "node ./packages/packemon/mjs/bin.mjs",
    "prerelease": "yarn run setup && yarn run moon run :build -u",
    "release": "yarn prerelease && lerna-release",
    "setup": "node ./scripts/buildPackages.mjs",
    "version": "yarn install && git add yarn.lock",
    "postinstall": "node ./scripts/deleteSwcTypes.mjs"
  },
  "workspaces": [
    "packages/*",
    "scenarios/*",
    "website"
  ],
  "engines": {
    "node": ">=16.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@moonrepo/cli": "^1.24.6",
    "@moonrepo/dev": "^3.0.0",
    "@swc/cli": "^0.3.12",
    "@types/micromatch": "^4.0.7",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/semver": "^7.5.8",
    "@vanilla-extract/rollup-plugin": "^1.3.5",
    "babel-preset-moon": "^3.0.1",
    "bootstrap": "^5.3.3",
    "chokidar": "^3.6.0",
    "electron-to-chromium": "^1.4.777",
    "eslint": "^8.57.0",
    "eslint-config-moon": "^3.1.0",
    "lerna": "^8.1.3",
    "prettier": "^3.2.5",
    "prettier-config-moon": "^1.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-moon": "^1.3.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/milesjohnson"
  },
  "packageManager": "yarn@4.1.0"
}
