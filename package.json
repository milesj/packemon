{
  "name": "packemon",
  "version": "0.2.7",
  "description": "Build and prepare packages for NPM distribution using standardized configurations and practices. Gotta pack 'em all!",
  "keywords": [
    "build",
    "prepare",
    "pack",
    "package"
  ],
  "scripts": {
    "prepare": "beemo create-config --silent",
    "setup": "beemo typescript",
    "build": "yarn run packemon build --addEngines --checkLicenses --generateDeclaration",
    "ci": "yarn run type && yarn run test && yarn run lint",
    "clean": "rm -rf {build,dts,lib}",
    "coverage": "yarn run test --coverage",
    "format": "beemo prettier",
    "lint": "beemo eslint",
    "release": "npx np --yolo",
    "test": "beemo jest",
    "type": "beemo typescript --noEmit",
    "prerelease": "yarn run ci && yarn run setup && yarn run build",
    "packemon": "node ./build/bin.js"
  },
  "repository": "https://github.com/milesj/packemon.git",
  "author": "Miles Johnson",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./dts/index.d.ts",
  "bin": "./lib/bin.js",
  "sideEffects": false,
  "engines": {
    "node": ">=10.3.0",
    "npm": ">=6.1.0"
  },
  "packemon": {
    "inputs": {
      "index": "src/index.ts",
      "babel": "src/babel.ts",
      "bin": "src/bin.ts"
    },
    "platform": "node"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "decorators": true,
      "node": true,
      "react": true
    }
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.13.1",
    "@types/fs-extra": "^9.0.2",
    "@types/node": "^14.14.2",
    "@types/react": "^16.9.53"
  },
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-flow": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@boost/cli": "^2.4.2",
    "@boost/common": "^2.3.0",
    "@boost/debug": "^2.1.3",
    "@boost/event": "^2.2.0",
    "@boost/pipeline": "^2.1.4",
    "@boost/terminal": "^2.1.0",
    "@microsoft/api-extractor": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "babel-plugin-transform-dev": "^2.0.1",
    "builtin-modules": "^3.1.0",
    "execa": "^4.0.3",
    "fast-glob": "^3.2.4",
    "filesize": "^6.1.0",
    "fs-extra": "^9.0.1",
    "ink": "^3.0.8",
    "ink-progress-bar": "^3.0.0",
    "ink-spinner": "^4.0.1",
    "react": "^16.14.0",
    "rollup": "^2.32.1",
    "rollup-plugin-node-externals": "^2.2.0",
    "spdx-license-list": "^6.3.0",
    "typescript": "^4.0.3"
  }
}
